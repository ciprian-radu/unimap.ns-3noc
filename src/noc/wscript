## -*- Mode: python; py-indent-offset: 4; indent-tabs-mode: nil; coding: utf-8; -*-

def build(bld):
    noc = bld.create_ns3_module('noc', ['core', 'simulator'])
    noc.source = [
        'noc-header.cc',
        ]

    headers = bld.new_task_gen('ns3header')
    headers.module = 'noc'
    headers.source = [
        'noc-header.h',
        ]
